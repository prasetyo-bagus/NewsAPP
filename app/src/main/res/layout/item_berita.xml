<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="10dp"
        android:id="@+id/cvGroup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/syl"/>

    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="110dp"
            app:layout_constraintStart_toStartOf="@id/cvGambar"
            android:id="@+id/tvJudulBerita"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_height="wrap_content"
            android:text="SYL 'Palak' Pegawai Kementan, Minta Dibelikan Parfum, HP, hingga Pin Emas"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/tvSumber"
            android:layout_marginLeft="110dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="8dp"
            android:paddingBottom="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="CNN Indonesia"
            android:layout_gravity="bottom"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat"
            />
        <TextView
            android:id="@+id/tvWaktu"
            android:layout_marginLeft="110dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="8dp"
            android:paddingBottom="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="2am lalu"
            android:layout_gravity="bottom"

            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>