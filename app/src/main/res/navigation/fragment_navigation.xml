<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_bottom_menu">

    <fragment
        android:id="@+id/home_bottom_menu"
        android:name="com.example.appnews.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/headline_bottom_menu"
        android:name="com.example.appnews.HeadlineFragment"
        android:label="Headline"
        tools:layout="@layout/fragment_headline" />
    <fragment
        android:id="@+id/category_bottom_menu"
        android:name="com.example.appnews.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_category_bottom_menu_to_duniaCategoryFragment"
            app:destination="@id/duniaCategoryFragment" />
        <action
            android:id="@+id/action_category_bottom_menu_to_indonesiaCategoryFragment"
            app:destination="@id/indonesiaCategoryFragment" />
        <action
            android:id="@+id/action_category_bottom_menu_to_hiburanCategoryFragment"
            app:destination="@id/hiburanCategoryFragment" />
        <action
            android:id="@+id/action_category_bottom_menu_to_olahragaCategoryFragment"
            app:destination="@id/olahragaCategoryFragment" />
        <action
            android:id="@+id/action_category_bottom_menu_to_teknologiCategoryFragment"
            app:destination="@id/teknologiCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/indonesiaCategoryFragment"
        android:name="com.example.appnews.category.IndonesiaCategoryFragment"
        android:label="IndonesiaCategoryFragment" >
        <action
            android:id="@+id/action_indonesiaCategoryFragment_to_duniaCategoryFragment"
            app:destination="@id/duniaCategoryFragment" />
        <action
            android:id="@+id/action_indonesiaCategoryFragment_to_teknologiCategoryFragment"
            app:destination="@id/teknologiCategoryFragment" />
        <action
            android:id="@+id/action_indonesiaCategoryFragment_to_hiburanCategoryFragment"
            app:destination="@id/hiburanCategoryFragment" />
        <action
            android:id="@+id/action_indonesiaCategoryFragment_to_olahragaCategoryFragment"
            app:destination="@id/olahragaCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/duniaCategoryFragment"
        android:name="com.example.appnews.category.DuniaCategoryFragment"
        android:label="DuniaCategoryFragment" >
        <action
            android:id="@+id/action_duniaCategoryFragment_to_indonesiaCategoryFragment"
            app:destination="@id/indonesiaCategoryFragment" />
        <action
            android:id="@+id/action_duniaCategoryFragment_to_hiburanCategoryFragment"
            app:destination="@id/hiburanCategoryFragment" />
        <action
            android:id="@+id/action_duniaCategoryFragment_to_olahragaCategoryFragment"
            app:destination="@id/olahragaCategoryFragment" />
        <action
            android:id="@+id/action_duniaCategoryFragment_to_teknologiCategoryFragment"
            app:destination="@id/teknologiCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/hiburanCategoryFragment"
        android:name="com.example.appnews.category.HiburanCategoryFragment"
        android:label="HiburanCategoryFragment" />
    <fragment
        android:id="@+id/olahragaCategoryFragment"
        android:name="com.example.appnews.category.OlahragaCategoryFragment"
        android:label="OlahragaCategoryFragment" />
    <fragment
        android:id="@+id/teknologiCategoryFragment"
        android:name="com.example.appnews.category.TeknologiCategoryFragment"
        android:label="TeknologiCategoryFragment" />

</navigation>
